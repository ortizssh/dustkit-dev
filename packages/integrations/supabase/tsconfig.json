{
  "extends": "@dustkit/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "paths": {
      "@dustkit/core": ["../../core/src"],
      "@dustkit/core/*": ["../../core/src/*"],
      "@dustkit/ui": ["../../ui/src"],
      "@dustkit/ui/*": ["../../ui/src/*"],
      "@dustkit/api-client": ["../../api-client/src"],
      "@dustkit/api-client/*": ["../../api-client/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
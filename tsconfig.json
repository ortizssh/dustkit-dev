{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "DustKit Monorepo Root",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@dustkit/core": ["./packages/core/src"],
      "@dustkit/core/*": ["./packages/core/src/*"],
      "@dustkit/ui": ["./packages/ui/src"],
      "@dustkit/ui/*": ["./packages/ui/src/*"],
      "@dustkit/api-client": ["./packages/api-client/src"],
      "@dustkit/api-client/*": ["./packages/api-client/src/*"],
      "@dustkit/supabase": ["./packages/integrations/supabase/src"],
      "@dustkit/supabase/*": ["./packages/integrations/supabase/src/*"]
    }
  },
  "references": [
    { "path": "./apps/web" },
    { "path": "./apps/mobile" },
    { "path": "./packages/core" },
    { "path": "./packages/ui" },
    { "path": "./packages/api-client" },
    { "path": "./packages/integrations/supabase" }
  ],
  "files": [],
  "exclude": ["node_modules", "dist", "build", ".next", ".expo", "coverage"]
}